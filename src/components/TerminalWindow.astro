---
type Props = {
	title: string
    //width: string;
    height: string;
    backgroundColor: string;
    borderColor: string;
};

const {title, backgroundColor, borderColor, height} = Astro.props;

---

<div class={`${borderColor} border-solid border-2 rounded-2xl overflow-hidden 
shadow-neo-brute shadow-ebony-clay w-full`}>
    <!-- TODO: find out why the backgroundColor wont go transparent -->
    <div class={`flex justify-center align-middle p-2 border-b-2 ${borderColor} ${backgroundColor}/75`}>
        <h1>{title}</h1>
    </div>
    <div class={`flex justify-center item-center p-6 shadow-inset ${backgroundColor} ${height}`}>
        <slot />
    </div>
</div>
