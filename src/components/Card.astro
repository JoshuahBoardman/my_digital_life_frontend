---
type Props = {
    title: string;
    metaData: {
        date: string;
        readTime: number;
        tags: string[];
    };
    postSnippet: string;
    href: string;
}

const {title, metaData, postSnippet, href} = Astro.props;
---

<div class="card card-bordered border-primary w-full bg-none rounded-regular">
  <div class="card-body gap-y-2">
    <h2 class="card-title font-bold text-primary text-3xl">{title}</h2>
    <div class="text-santas-gray text-xl"><span>{metaData.readTime} min read</span> | <span>{metaData.date}</span></div>
    <div class="card-actions items-center justify-start">
    <!-- TODO: on tag click should redirect to a filtered list of all articles that share the same tag -->
        {metaData.tags.map(tag => (
          <div class="badge badge-outline badge-accent text-lg">#{tag}</div> 
        ))}
    </div>
    <!-- TODO: limit the length of the postSnippet -->
    <p class="text-xl">{postSnippet} ...</p>
    <div class="card-actions justify-end">
      <a href={href} class="btn btn-outline btn-secondary rounded-regular text-xl">Read More</a>
    </div>
  </div>
</div>
