---
type Props = {
    width: string;
    height: string;
    backgroundColor: string;
    svgColor: string;
}

const {width, height, backgroundColor, svgColor} = Astro.props;

---

<div class={`${width} ${backgroundColor} flex justify-center items-center rounded-2xl shadow-neo-brute p-2.5`}>
    <svg class={`${svgColor} mx-auto`}>
        <slot name="svg" class={`${width} ${height}`} />
    </svg>
</div>
