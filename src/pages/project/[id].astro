---
import PageWrapperLayout from '../../layouts/PageWrapperLayout.astro';
import TerminalWindow from '../../components/TerminalWindow.astro';
import Btn from '../../components/Btn.astro';

const {id} = Astro.params;

// TODO: Define a project type
const project = {
    title: 'Anime Insight',
    shortDescription: 'Find just the right anime for whatever mood you may be feeling',
    description: 'Anime Insight is a web sight designed to help you find anime when you are not sure what to watch.',
    concepts: ['apis', 'state_management', 'mobile_first_design'],
    date: '8_12_2021',
    repo: 'https://github.com/JoshuahBoardman/Anime-Insight-App',
    sections: [
        {
            header: 'Introduction', 

            //TODO: might want to break each section body up into paragraphs
            body: 'This is the stuffs and things. Very long articles promise'
        },
        {
            header: 'Introduction 2', 
            body: 'This is the stuffs and things. Very long articles promise 2'
        },
{
            header: 'Introduction 3', 

            //TODO: might want to break each section body up into paragraphs
            body: 'This is the stuffs and things. Very long articles promise'
        },
        {
            header: 'Introduction 4', 
            body: 'This is the stuffs and things. Very long articles promise 2'
        }

    ],
}

---

<PageWrapperLayout title={project.title}>
    <TerminalWindow title={`project_${id}`}>
        <article class="w-full flex flex-col justify-center text-xl text-mischka gap-y-8 ">
            <!-- TODO: Refactor into a project header layout -->
            <header class="w-full flex items-center justify-center flex-col gap-y-6">
                <!-- TODO: add a repo button to the header image -->
                <figure class="w-full h-96 bg-mischka rounded-regular overflow-hidden">
                    <img src="/" alt="Placholder Img">
                </figure>
                <!-- TODO: make the header link to the github repo -->
                <!-- TODO: maybe put the github logo next to the header to indicate it is a link to github -->
                <div class="w-full">
                    <h2 class="text-4xl text-primary">{project.title}</h2>
                </div>
                <div class="w-full">
                    <span class="text-xl italic">{project.shortDescription}</span>
                </div>
                <div class="w-full text-xl text-primary">
                    <span>{project.date} |</span> 
                    <span>7 min read |</span> 
                    {project.concepts.map(concept => (
                        <span class="badge badge-outline badge-accent text-lg">#{concept}</span>
                    ))}
                    <!-- TODO: limit the number of tags to 3 and add a +n for each additional tags -->
                    <!-- TODO: make the +n show the list of other tags on hover --> 
                    <span>+2</span> 
                </div> 
                <div class="w-full flex flex-col justify-center items-start gap-2">
                    <h4 class="text-3xl font-semibold text-primary">Content:</h4>
                    <ol class="list-disc list-inside text-lg flex flex-col gap-2">
                        {project.sections.map(section => (
                        <li>
                            <a href={`#${section.header.replaceAll(' ', '-').toLowerCase()}`} class="link link-hover link-secondary text-xl">{section.header}</a>
                        </li>
                        ))}
                    </ol>
                </div>
            </header>
            <!-- TODO: Create a content section -->

            <!-- TODO: Refactor to use md -->
               {project.sections.map(section => (
            <section id={section.header.replaceAll(' ', '-').toLowerCase()}class="w-full">
                        <h3 class="text-3xl text-primary">{section.header}:</h3>
                        <div class="w-full text-base pt-2">
                            <p class="text-xl">{section.body}</p>
                        </div>
                    </section>
               ))} 
        </article>
    </TerminalWindow>
</PageWrapperLayout>
